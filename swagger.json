              "type": "object",
              "required": [
                "firstName",
                "lastName",
                "email",
                "phoneNumber",
                "password"
              ],
              "properties": {
                "firstName": {
                  "type": "string",
                  "example": "John"
                },
                "lastName": {
                  "type": "string",
                  "example": "Doe"
                },
                "email": {
                  "type": "string",
                  "example": "john.doe@example.com"
                },
                "phoneNumber": {
                  "type": "string",
                  "example": "123-456-7890"
                },
                "password": {
                  "type": "string",
                  "example": "password123"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
